<h1>Here is the list of Users</h1>
<% @users.each do |user| %>
  <article class='user'>
    <figure>
      <img class='user-image' src= '<%= user.photo %>' alt="<%= user.name %>" />
    </figure>
    <%= link_to user_path(user.id) do  %>
      <section class='user-info'> 
        <h2>User: <%= user.name %></h2>
        <p>Number of post:<strong> <%= user.post_counter || 0 %> </strong> </p>
      </section>
    <% end %>
</article>
<% end %>
<% if @current_user.present? %>
  <%= link_to "Add a post", new_user_post_path(@current_user), class: 'button w120' %>
<% end %>


