<% if @comment.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@comment.errors.count, "error") %> Stop save comment by:</h2>
    <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<main>
  <h2>New Comment</h2>
  <%= form_for [@user, @post, @comment] do |f| %>
    <h3>User: <%= @user.name %></h3>
    <h3>Post: <%= @post.title %></h3>
    
    <%= f.label :text %>
    <%= f.text_area :text %>

    <%= f.submit 'Create Comment', class: "button" %>
  <% end %>

</main>